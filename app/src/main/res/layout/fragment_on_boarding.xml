<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.OnBoardingFragment">



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/onboarding_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_margin="30dp"
        app:srcCompat="@drawable/ic_baseline_chat_24"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/onboarding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboarding_image"
        android:layout_margin="30dp"
        android:text="Simple title"
        android:textSize="20sp"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/onboarding_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboarding_title"
        android:layout_marginHorizontal="30dp"
        android:text="Тут будет описание какое-то строчки на 3 жлеательно с красивыми словами"
        android:textSize="16sp"
        android:gravity="center"
        />


</RelativeLayout>