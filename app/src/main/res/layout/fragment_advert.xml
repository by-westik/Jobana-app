<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".ui.home.AdvertFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_photo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/snowflake"/>

    <TextView
        android:id="@+id/tv_advert_title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="?attr/primaryTextColor"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_description_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:textSize="14sp"
        android:textColor="?attr/inputTextIcon"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/primaryTextColor"
        android:textSize="14sp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_date_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата создания"
        android:textColor="?attr/inputTextIcon"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/primaryTextColor"
        android:textSize="14sp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="20dp"
        android:id="@+id/btn_respond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/accentColor"
        android:text="@string/respond"/>

</LinearLayout>