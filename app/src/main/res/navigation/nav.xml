<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/onboardindViewPagerFragment"
        android:label="fragment_onboarding_viewpager"
        android:name="com.kfd.jobana.OnboardingViewPagerFragment"
        tools:layout="@layout/fragment_onboarding_view_pager"
        >
        <action
            android:id="@+id/action_onboardingViewPagerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/onboardindViewPagerFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kfd.jobana.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_onboardingViewPagerFragment"
            app:destination="@id/onboardindViewPagerFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>